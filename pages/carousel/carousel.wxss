.carousel{
  background-color: #000;
  height: 100%;
  width: 100%;
}

.carouselbox {
  width: 100%;
  height: 100%;
}
.carouselbox .comment{
  color: #fff;
  position: absolute;
  right: 0;
  top: 0;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  z-index: 2;
}
.carouselbox .comment .border-dian{
  border: 1px solid #fff;
  background: #000;
  border-radius: 20rpx 20rpx 0 20rpx;
  width: 80rpx;
  height: 52rpx;
  position: relative;
}
.carouselbox .comment .border-dian::before{
  position: absolute;
  content: ".";
  top: -6rpx;
  left: 36rpx;
  color: #fff
}
.carouselbox .comment .border-dian::after{
  position: absolute;
  content: "";
  width: 0;
  height: 0;
  border-right: 12rpx solid transparent;
  border-left: 12rpx solid #fff;
  border-top: 12rpx solid transparent;
  right: -26rpx;
  bottom: -2rpx
}
.carouselbox .comment .dian{
  position: relative;
  color: #fff;
  height: 100%;
  text-align: center;
}
.carouselbox .comment .dian::before{
  position: absolute;
  content: ".";
  top: -6rpx;
  left: 12rpx;
  color: #fff
}
.carouselbox .comment .dian::after{
  position: absolute;
  content: ".";
  top: -6rpx;
  right: 12rpx;
  color: #fff
}
.carouselbox .comment .num{
  margin: 20rpx;
}
.carousel-item{
  height: 100%;
  display: flex;
  align-items: center;
  position: relative;
}
.carousel-item .img{
  width: 100%;
}
.content{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  font-size: 34rpx;
  color: #fff;
  background: rgba(0,0,0,.2);
  overflow-y: scroll;
  height: 320rpx;
  max-height: 320rpx;
  z-index: 10;
}
.content .title{
  display: flex;
  justify-content: space-between;
}
.content .currenttitle{
  flex: 1;
}
.content .currentnum{
  width: 80rpx;
  text-align: right;
}
.content .description{
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #999
}
